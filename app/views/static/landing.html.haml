      .carousel.slide{:id=>"slide-images", :data => {:ride => "carousel", :interval => "12000"}}
        .carousel-inner
          .item.active
            = video_tag('http://www.galleries.evancaldwell.com/videos/landing-day.webmhd.webm', controls: false, id: [:'homePage_webmhd.webm1',:video1], height: "100%", poster: "",class: :video, muted: :true)
          .item
            = video_tag('http://www.galleries.evancaldwell.com/videos/landing_park.webmhd.webm', controls: false, id: [:'homePage_webmhd.webm2'], height: "100%", poster: "",class: :video, muted: :true)
          .item
            = video_tag('http://www.galleries.evancaldwell.com/videos/landing_intersection.webmhd.webm', controls: true, id: [:'homePage_webmhd.webm3'], height: "100%", poster: "",class: :video, muted: :true)
          .item
            = video_tag('http://www.galleries.evancaldwell.com/videos/landing_skyline2.webmhd.webm', controls: false, id: [:'homePage_webmhd.webm4'], height: "100%", poster: "",class: :video, muted: :true)
          .item
            = video_tag('http://www.galleries.evancaldwell.com/videos/landing_sign.webmhd.webm', controls: false, id: [:'homePage_webmhd.webm5'], height: "100%", poster: "",class: :video, muted: :true)
    #landing-marketing
      #landing-marketing-box
        %h2#home-marketing-text 
          Inscreva-se para o próximo semestre. Apenas 21 dias!
      .row
        %span.chevron-thin
          %a
            = image_tag "chevronThin.svg", class: [:"chevron-img"], alt: "Scroll down for more info."
