=render 'navbar_landing'
.container-fluid
  .video-header
    /.landing-logo-back
    .row#landing-video
      .carousel.slide{:id=>"slide-images", :data => {:ride => "carousel", :interval => "12000"}}
        .carousel-inner
          .item.active
            = video_tag('http://www.galleries.evancaldwell.com/videos/landing-day.webmhd.webm', controls: false, id: [:'homePage_webmhd.webm1',:video1], height: "100%",class: :video, muted: :true)
          .item
            = video_tag('http://www.galleries.evancaldwell.com/videos/landing_park.webmhd.webm', controls: false, id: [:'homePage_webmhd.webm2'], height: "100%",class: :video, muted: :true)
          .item
            = video_tag('http://www.galleries.evancaldwell.com/videos/landing_intersection.webmhd.webm', controls: true, id: [:'homePage_webmhd.webm3'], height: "100%",class: :video, muted: :true)
          .item
            = video_tag('http://www.galleries.evancaldwell.com/videos/landing_skyline2.webmhd.webm', controls: false, id: [:'homePage_webmhd.webm4'], height: "100%",class: :video, muted: :true)
          .item
            = video_tag('http://www.galleries.evancaldwell.com/videos/landing_sign.webmhd.webm', controls: false, id: [:'homePage_webmhd.webm5'], height: "100%",class: :video, muted: :true)
    #landing-marketing
      #landing-marketing-box
        %h2#home-marketing-text 
          Bem Vindo ao New York English Institute!
      .row
        %span.chevron-thin
          %a
            = image_tag "chevronThin.svg", class: [:"chevron-img"], alt: "Scroll down for more info."
.container
  %h1.landing-titles 
    Cursos
  .button-grid
    %a
      %p.landing-overlay Inglês Fluente
      = image_tag "english_fluency.jpg", class: [:"button-img"], alt: "English Full Course"
    %a
      %p.landing-overlay Inglês Acadêmico
      = image_tag "academic_english.jpg", class: [:"button-img"], alt: "Acedemic English"
    %a
      %p.landing-overlay Curso Preparatório – Mestrado
      = image_tag "prep_course_undergrad.jpg", class: [:"button-img"], alt: "Test Prep"
    %a       
      %p.landing-overlay Curso Preparatório – Ensino Superior
      = image_tag "prep_course_grad.jpg", class: [:"button-img"], alt: "Grad School Prep"
    %a
      %p.landing-overlay Conversação
      = image_tag "conversation.jpg", class: [:"button-img"], alt: "Conversation"
    %a
      %p.landing-overlay Inglês para Viajantes
      = image_tag "english_travelers.jpg", class: [:"button-img"], alt: "Work Shops"
  %h1.landing-titles 
    Viagens
  .button-grid
    %a
      %p.landing-overlay Turismo
      = image_tag "tourism.jpg", class: [:"button-img"], alt: "English for Travel"
    %a
      %p.landing-overlay Imersão Cultural
      = image_tag "cultural_immersion_landing.jpg", class: [:"button-img"], alt: "Travel to the US"
    %a
      %p.landing-overlay Estudar no Exterior
      = image_tag "study_abroad_landing.jpg", class: [:"button-img"], alt: "Travel to the US"
= render 'footer'