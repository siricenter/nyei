= render "navbar"

.container
  .row
    %h1.text-center#title New York English Institute

.container.box
  %video{:class => [:'landing-video'],:controls => true}
    %source{:src => "/assets/landing-video.oggtheora.ogv", :type => 'video/ogg; codecs="theora, vorbis"'}
    %source{:src => "/assets/landing-video.mp4", :type => 'video/mp4; codecs="avc1.4D401E, mp4a.40.2"'}
  .myCarousel.carousel.slide{:"data-ride" => :carousel}
    %ol.carousel-indicators
      %li.active{:"data-target" => "#myCarousel", :"data-slide-to" => "0"}
      %li{:"data-target" => "#myCarousel", :"data-slide-to" => "1"}
      %li{:"data-target" => "#myCarousel", :"data-slide-to" => "2"}
      %li{:"data-target" => "#myCarousel", :"data-slide-to" => "3"}
      %li{:"data-target" => "#myCarousel", :"data-slide-to" => "4"}
      %li{:"data-target" => "#myCarousel", :"data-slide-to" => "5"}
      %li{:"data-target" => "#myCarousel", :"data-slide-to" => "6"}
      %li{:"data-target" => "#myCarousel", :"data-slide-to" => "7"}
      %li{:"data-target" => "#myCarousel", :"data-slide-to" => "8"}
    .carousel-inner
      .item.active
        = image_tag "english full.jpg",:class => [:"button-img"],:alt => "English Full Course"
      .item
        = image_tag "teach english.jpg",:class => [:"button-img"],:alt => "Acedemic English"
      .item
        = image_tag "grad.jpg",:class => [:"button-img"],:alt => "Grad School Prep"
      .item
        = image_tag "test.jpg",:class => [:"button-img"],:alt => "Test Prep"
      .item
        = image_tag "talk.jpg",:class => [:"button-img"],:alt => "Conversation"
      .item
        = image_tag "workshop.jpg",:class => [:"button-img"],:alt => "Work Shops"
      .item
        = image_tag "learn.jpg",:class => [:"button-img"],:alt => "English for Travel"
      .item
        = image_tag "travel with us.jpg",:class => [:"button-img"],:alt => "Travel to the Us"
      .item
        = image_tag "study.jpg",:class => [:"button-img"],:alt => "Grad School Prep"

    %a.left.carousel-control{ :href => "#myCarousel", :role => "button", :"data-slide" => "prev"}
      %span.glyphicon.glyphicon-chevron-left
    %a.right.carousel-control{ :href => "#myCarousel", :role => "button", :"data-slide" => "next"}
      %span.glyphicon.glyphicon-chevron-right
= render "footer"