      = image_tag "teach english.jpg", class: [:"button-img"], alt: "Acedemic English"
    %a
      = image_tag "grad.jpg", class: [:"button-img"], alt: "Grad School Prep"
    %a
      = image_tag "test.jpg", class: [:"button-img"], alt: "Test Prep"
    %a
      = image_tag "talk.jpg", class: [:"button-img"], alt: "Conversation"
    %a
      = image_tag "workshop.jpg", class: [:"button-img"], alt: "Work Shops"
    %a
      = image_tag "learn.jpg", class: [:"button-img"], alt: "English for Travel"
    %a
      = image_tag "travel with us.jpg", class: [:"button-img"], alt: "Travel to the Us"
    %a
      = image_tag "study.jpg", class: [:"button-img"], alt: "Grad School Prep"

