=render 'navbar_landing'
.container-fluid
  .video-header
    .landing-logo-back
    .row#landing-video
      .carousel.slide{:id=>"slide-images", :data => {:ride => "carousel"}}
        .carousel-inner
          .item.active
            = video_tag('http://www.galleries.evancaldwell.com/videos/homePage_webmhd.webm', controls: false, autoplay: true, loop: true, id: [:'homePage_webmhd.webm'], height: "100%", poster: "homePageVidPoster.png",class: :video)
          .item
            = video_tag('http://www.galleries.evancaldwell.com/videos/landing-day.webmhd.webm', controls: false, autoplay: true, loop: true, id: [:'homePage_webmhd.webm'], height: "100%", poster: "homePageVidPoster.png",class: :video)
    #landing-marketing
      #landing-marketing-box
        %h2#home-marketing-text 
          Inscreva-se para o próximo semestre. Apenas 21 dias!
      .row
        %span.chevron-thin
          %a
            = image_tag "chevronThin.svg", class: [:"chevron-img"], alt: "Scroll down for more info."
.container
  %h1.landing-titles 
    Cursos Oferecidos
  .button-grid

    %a
      %p.landing-overlay Inglês Fluente
      = image_tag "study_group.jpg", class: [:"button-img"], alt: "English Full Course"
    %a
      %p.landing-overlay Inglês Acadêmico
      = image_tag "Academic English.jpg", class: [:"button-img"], alt: "Acedemic English"
    %a       
      %p.landing-overlay Curso Preparatório – Mestrado
      = image_tag "Prep Course Undergrad.jpg", class: [:"button-img"], alt: "Grad School Prep"
    %a
      %p.landing-overlay Curso Preparatório – Ensino Superior
      = image_tag "Prep Course Grad.jpg", class: [:"button-img"], alt: "Test Prep"
    %a
      %p.landing-overlay Conversação
      = image_tag "Conversation.jpg", class: [:"button-img"], alt: "Conversation"
    %a
      %p.landing-overlay Inglês para Viajantes
      = image_tag "English for Travelers.jpg", class: [:"button-img"], alt: "Work Shops"
  %h1.landing-titles 
    Oportunidades de Viagem
  .button-grid

    %a
      %p.landing-overlay Viajar para os EUA
      = image_tag "Ninaup2.jpg", class: [:"button-img"], alt: "English for Travel"
    %a
      %p.landing-overlay Imersão Cultural
      = image_tag "Cultural Immersion.jpg", class: [:"button-img"], alt: "Travel to the US"
    %a
      %p.landing-overlay Estudar no Exterior
      = image_tag "Study Abroad.jpg", class: [:"button-img"], alt: "Travel to the US"
